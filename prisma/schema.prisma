generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  brands    Brand[]
}

model Brand {
  id        String   @id @default(cuid())
  name      String
  handle    String?
  createdAt DateTime @default(now())

  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])

  assets    Asset[]
  palettes  Palette[]
  posts     Post[]
}

model Asset {
  id        String   @id @default(cuid())
  type      String
  url       String
  createdAt DateTime @default(now())

  brandId   String
  brand     Brand    @relation(fields: [brandId], references: [id])
}

model Palette {
  id        String   @id @default(cuid())
  name      String
  colors    String[]
  createdAt DateTime @default(now())

  brandId   String
  brand     Brand    @relation(fields: [brandId], references: [id])
}

model Post {
  id          String   @id @default(cuid())
  caption     String?
  imageUrl    String?
  scheduledAt DateTime?
  createdAt   DateTime @default(now())

  brandId     String
  brand       Brand    @relation(fields: [brandId], references: [id])
}

model DesignJob {
  id         String   @id @default(cuid())
  status     String   @default("CREATED") // CREATED, UPLOADED, RUNNING, SUCCEEDED, FAILED
  progress   Int      @default(0)
  inputKey   String?  // S3 key for uploaded image
  styleBrief Json?
  error      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  outputs    DesignOutput[]
}

model DesignOutput {
  id        String   @id @default(cuid())
  jobId     String
  job       DesignJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  variant   Int
  outputKey String   // S3 key for generated image
  createdAt DateTime @default(now())

  @@unique([jobId, variant])
}

